<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="100" id="ch.alexi.zyt" ios-CFBundleVersion="100" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Zyt</name>
    <description>
        A "talking" Clock - Shows the actual time as spoken in words
    </description>
    <author email="alex@alexi.ch" href="https://alexi.ch/">
        Alexander Schenkel
    </author>
    <content src="index.html" />
    <preference name="Fullscreen" value="true" />
    <preference name="android-minSdkVersion" value="19" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.2.1" />
    <plugin name="cordova-plugin-insomnia" spec="https://github.com/EddyVerbruggen/Insomnia-PhoneGap-Plugin.git" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.4.0" />
</widget>
